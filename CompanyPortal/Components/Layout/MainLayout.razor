<script>
    document.addEventListener("DOMContentLoaded", function () {
        window.addEventListener('scroll', function () {
            if (window.scrollY > 128) {
                document.getElementById('mainNav').style.paddingTop = 0;
                document.getElementById('mainNav').style.height = '70px';
                document.getElementById('mainNav').classList.add("animate__animated");
                document.getElementById('mainNav').classList.add("animate__slideInDown");
                document.getElementById('mainNav').classList.remove("animate__slideInUp");
            } else {
                document.getElementById('mainNav').style.paddingTop = '32px';
                document.getElementById('mainNav').style.height = '102px';
                document.getElementById('mainNav').classList.remove("animate__animated");
                document.getElementById('mainNav').classList.add("animate__slideInUp");
                document.getElementById('mainNav').classList.remove("animate__slideInDown");
            }
        });
    });
</script>