@page "/Administration/Settings"


<hr />
<div class="row">
    <div class="col-12 justify-content-between">
        <h3>Settings</h3>
    </div>
</div>
<div class="row">
    <div class="col-8">
        <div id="carouselSetting" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @foreach (var image in CarouselImages)
                {
                    <div class="carousel-item active">
                        <img src="@(image.Status == UploadFileStatus.Old ? image.Url : image.Base64Content)" class="d-block w-100" alt="@image.Name">
                    </div>
                }
            </div>
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselSetting" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselSetting" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselSetting" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselSetting" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselSetting" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="col-4">
        <FileUploader AllowMultiple ShowPreview AcceptFileExtensions=".jpg, .png" Files="CarouselImages" Id="carouselSettingFileUploader" OnFilesSelected="Test"></FileUploader>
     </div>
 </div>


 @code {
    private List<ResourceViewModel> CarouselImages { get; set; } = [];

    private void Test()
    {
        StateHasChanged();
    }
}
